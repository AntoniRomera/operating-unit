<?xml version="1.0" encoding="UTF-8"?>
<templates id="OUtemplate" xml:space="preserve">
<t t-name="SwitchOuMenu">
    <li class="o_switch_ou_menu">
        <a role="button" class="dropdown-toggle" data-toggle="dropdown" data-display="static" aria-expanded="false" href="#" title="Dropdown menu">
            <span t-attf-class="#{widget.isMobile ? 'fa fa-building-o' : 'oe_topbar_name'}">
                <t t-if="!widget.isMobile"><t t-esc="widget.current_ou_name"/></t>
            </span>
        </a>
        <div class="dropdown-menu dropdown-menu-right" role="menu">
            <t t-foreach="widget.user_operating_units" t-as="ou">
                <div class="dropdown-item d-flex py-0 px-0" data-menu="ou" t-att-data-ou-id="ou[0]">
                    <t t-set="is_allowed" t-value="widget.allowed_ou_ids.includes(ou[0])"/>
                    <t t-set="is_current" t-value="ou[0] === widget.current_ou"/>
                    <div role="menuitemcheckbox" t-att-aria-checked="is_allowed" t-att-aria-label="ou[1]" tabindex="0" class="ml-auto pl-3 pr-3 border border-top-0 border-left-0 border-bottom-0 toggle_ou o_py">
                        <span style="height: 2rem;">
                            <t t-if="is_allowed">
                                <i class="fa fa-fw fa-check-square pt-2"></i>
                            </t>
                            <t t-if="!is_allowed">
                                <i class="fa fa-fw fa-square-o pt-2"></i>
                            </t>
                        </span>
                    </div>
                    <div role="button" t-att-aria-pressed="is_current" aria-label="Switch to this ou" tabindex="0" class="d-flex flex-grow-1 align-items-center py-0 log_into pl-3 o_py" t-att-style="is_current ? 'background-color: lightgrey;' : ''">
                        <t t-if="is_allowed">
                            <span class='mr-3 ou_label'>
                                <t t-esc="ou[1]"/>
                            </span>
                        </t>
                        <t t-if="!is_allowed">
                            <span class='mr-3 ou_label text-muted'>
                                <t t-esc="ou[1]"/>
                            </span>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </li>
</t>
</templates>